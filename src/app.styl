*
  box-sizing border-box
body, html
  display flex
  min-height 100%
  width 100%
  margin 0
  font-family roboto, helvetica, arial, sans-serif
  user-select none
  .hidden, svg
    display none!important
  .disabled
    opacity 0.2
    pointer-events none
  .home
    flex 1
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-items center
    background #222
    h1
      font-size 4rem
      filter url(#myFilter)
    button
      font-size 1.6rem
      padding 1rem
  .script
    padding 1rem
    display flex
    flex-direction column
    width 100%
    background #222
    color #fefefe
    .outputdir
      display flex
      label
        flex 1
        border 1px solid #444
        padding .3rem
    .input-boxes
      display flex
      .inputdevice, .prepend
        margin .3rem
        flex 1
        display flex
        color #aaa
        label
          margin-right 1rem
        input, select
          flex 1
    .main
      flex 1
      display flex
      flex-direction column
      button
        padding 1rem
        font-size 2rem
        margin .3rem
      .textline
        font-size 2rem
        flex 1
        display flex
        justify-content center
        align-items center
      .shuttle, .backnext
        display flex
        justify-content center
      .viz
        display flex
        justify-content center
        position relative
        height 4rem
        canvas
          border-radius .5rem
          border 1px solid #444
          filter blur(1px)
        .index
          text-align center
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          display flex
          flex-direction column
          justify-content center
          align-items center
          label
            font-size .6rem
            color #aaa
          .number
            font-size 1.6rem
            margin-bottom .3rem
      .appcontrols
        margin-top .3rem
    .right
      display flex
      justify-content flex-end
      margin-top .3rem
      button
        padding 1rem